{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=RegistrationApp;Trusted_Connection=True;TrustServerCertificate=Yes;",
          //"connectionString": "Data Source=host.docker.internal,1433; Initial Catalog=RegistrationApp; User Id=sa; Password=mAdmin_123; TrustServerCertificate=True",
          "autoCreateSqlTable": true,
          "tableName": "Logs"
        }
      }

    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "RepositorySettings": {
    "RepositoryType": "Database", //FileSystem/Database
    "FileSystemSettings": {
      "FilePath": "Data/"
    },
    "DatabaseSettings": {
      "DataAccessLayer": "Dapper", //ADO/EntityFrameworkCore/Dapper
      //"ConnectionString": "Data Source=host.docker.internal,1433; Initial Catalog=RegistrationApp; User Id=sa; Password=mAdmin_123;TrustServerCertificate=True"
      "ConnectionString": "Server=localhost;Database=RegistrationApp;Trusted_Connection=True;TrustServerCertificate=Yes;"
    }
  },
  "JwtSetting": {
    "Issuer": "https://localhost:32770",
    "Audience": "https://localhost:5173",
    "Key": "bd1a1ccf8095037f361a4d351e7c0de65f0776bfc2f478ea8d312c763bb6caca",
    "ExpiresInMinutes": "360"
  }
}
